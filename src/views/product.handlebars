{{#if product}}
    {{#with product}}
        <div>
            <h2>{{title}}</h2>
            <p><b>Description:</b> {{description}}</p>
            <p><b>Price: $</b>{{price}}</p>
            <p><b>Code:</b> {{code}}</p>
            <p><b>Stock:</b> {{stock}}</p>
        </div>
    {{/with}}
{{else}}
    <strong>{{message}}</strong>
{{/if}}